@model CafeCarki.Models.Address

@{
    ViewData["Title"] = "Edit";
}
<div class="container">

    <h2>Edit</h2>

    <h4>Address</h4>
    <hr />
    <div class="row mt-2">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="AddressId" />
                <input type="hidden" asp-for="UserId" />
                <div class="form-group">
                    <label asp-for="AddressName" class="control-label"></label>
                    <input asp-for="AddressName" class="form-control" />
                    <span asp-validation-for="AddressName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AddressStreet" class="control-label"></label>
                    <input asp-for="AddressStreet" class="form-control" />
                    <span asp-validation-for="AddressStreet" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AddressDoor" class="control-label"></label>
                    <input asp-for="AddressDoor" class="form-control" />
                    <span asp-validation-for="AddressDoor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="Visible" /> @Html.DisplayNameFor(model => model.Visible)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
