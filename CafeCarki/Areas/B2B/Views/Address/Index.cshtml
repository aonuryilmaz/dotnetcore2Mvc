@model List<CafeCarki.Areas.B2B.ViewModels.AddressListViewModel>
<div class="container bg-white mt-2">
    <div class="row mb-2">
        <div class="col-12">
            <h3 class="font-weight-light">Address List</h3>
        </div>
    </div>
    @if (Model.Count > 0 && Model != null)
    {
        <div class="row">
            <div class="col-12">
                <table class=" table table-bordered">
                    <thead>
                        <tr>
                            <th>Address Name</th>
                            <th>Address Door</th>
                            <th>Restaurant</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AddressName</td>
                                <td>@item.AddressDoor</td>
                                <td>@item.Restaurant.Name</td>
                                <td>
                                    <a class="btn btn-primary" asp-action="Edit" asp-controller="Address" asp-area="B2B" asp-route-id="@item.AddressId">Edit</a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Address" asp-area="B2B" asp-route-id="@item.AddressId">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-danger">Veri dönüşü olmadı.</div>
            </div>
        </div>
    }
</div>