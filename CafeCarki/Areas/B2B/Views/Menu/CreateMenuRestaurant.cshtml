@model MenuRestaurant
<div class="container bg-white">
    <div class="row mt-2">
        <div class="col-6">
            <form asp-action="CreateMenuRestaurant" asp-controller="Menu" asp-area="B2B">
                <input type="hidden" name="RestaurantId" value="@ViewBag.RestaurantId" />
                <input type="hidden" asp-for="UserId" />
                <div class="form-group">
                    <label>Name</label>
                    <input class="form-control" asp-for="Name" />
                </div>
                <button class="btn btn-success">Create</button>
            </form>
        </div>
        <div class="col-6">
            <form asp-action="AddMenuRestaurant" asp-controller="Menu" asp-area="B2B">
                <input type="hidden" name="RestaurantId" value="@ViewBag.RestaurantId" />
                <input type="hidden" asp-for="UserId" />
                <div class="form-group">
                    <label>Menu Seç</label>
                    <select class="form-control" name="Menu" asp-items="@ViewBag.MenuList"></select>
                </div>
                <button class="btn btn-success">Kaydet</button>
            </form>            
        </div>
    </div>
</div>