@model List<Restaurant>
<div class="container">
    <div class="row">
        <div class="col-12">
            <h4 class="font-weight-bold">Restaurant Management</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Restaurant Name</th>
                        <th>Open Time</th>
                        <th>Closed Time</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        string btnText = "Onayla";
                        string btnCss = "btn btn-success";
                        string textStatus = "Onaylanmadı";
                        if (item.AdminOkey)
                        {
                            textStatus = "Onaylı";
                            btnText = "Kapat";
                            btnCss = "btn btn-danger";
                        }
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.OpenTime</td>
                            <td>@item.ClosedTime</td>
                            <td>@textStatus</td>
                            <td><a class="@btnCss" asp-action="ChangeStatus" asp-controller="RestaurantManagement" asp-area="SysOp" asp-route-id="@item.RestaurantId">@btnText</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>