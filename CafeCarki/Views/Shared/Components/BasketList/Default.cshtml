@model Basket

<div class="row">
    <div class="modal fade" id="basketModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalCenterTitle">Sepet</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @if (Model?.MenuItems.Count > 0)
                    {
                        foreach (var item in Model?.MenuItems)
                        {
                            <h5>
                                @item.Name<span class="float-right">@item.Price.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</span><a class="btn btn-link" asp-action="RemoveBasket" asp-controller="Home" asp-area="Mobile" asp-route-MenuItemId="@item.MenuItemId">
                                    <i class="fa fa-times" aria-hidden="true"></i>
                                </a>
                            </h5>
                        }
                    }
                    else
                    {
                        <h5>Sepetiniz Boş</h5>
                    }
                    <hr />
                    <span class="float-right text-danger">Toplam : @Model?.TotalPrice.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Siparişi Tamamla</button>
                </div>
            </div>
        </div>
    </div>
</div>